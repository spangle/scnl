<table class="profile" summary="Message information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= @message_post.subject %>
      </h1>
			<br />
			<%= @message_post.message %>
			<br />
    </td>
    <td class="sidebar round">
      <strong>Posted by</strong> <%= link_to @user.name, @user %><br />
      <strong>E-Mail</strong>  <%= @user.email %><br />
      <strong>Posts</strong> <%= @user.message_posts.count %><br />
			<% if current_user.admin? %>
				<%= link_to "Delete Post", @message_post,	:method => :delete, :confirm => "You sure?",
																									:title => "Delete #{@message_post.subject}" %><br />
			<% end %>
    </td>
  </tr>
</table>

